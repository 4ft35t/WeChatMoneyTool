<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:layout="@layout/preference_category_layout"
        android:title="监视选项">
        <EditTextPreference
            android:key="pref_watch_exclude_words"
            android:layout="@layout/preference_checkbox"
            android:summary="@string/pref_watch_exclude_words_summary"
            android:title="抢不起"></EditTextPreference>
        <CheckBoxPreference
            android:key="pref_watch_black_screen_notification"
            android:checked="true"
            android:defaultValue="true"
            android:layout="@layout/preference_checkbox"
            android:summary="@string/pref_watch_notification_summary"
            android:title="黑屏抢"></CheckBoxPreference>
        <CheckBoxPreference
            android:key="pref_click_open_hongbao"
            android:checked="true"
            android:defaultValue="true"
            android:layout="@layout/preference_checkbox"
            android:summary="@string/pref_click_open_summary"
            android:title="自动拆"></CheckBoxPreference>
    </PreferenceCategory>
</PreferenceScreen>