<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf8f5"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/upperLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#ffd84e43"
        android:elevation="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:gravity="center_vertical"
            android:text="微信红包"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="V2.0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="15sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/upperLayout"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical"
            android:textColor="#858585">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:src="@drawable/logo_sign" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="签到" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_accessible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:onClick="onButtonClicked"
            android:orientation="vertical"
            android:textColor="#858585">

            <ImageView
                android:id="@+id/im_accessible"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/logo_start" />

            <TextView
                android:id="@+id/tv_accessible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="开启插件" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:onClick="onButtonClicked"
            android:orientation="vertical"
            android:textColor="#858585">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/logo_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="设置" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_uber"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/controlLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:onClick="openUber"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_uber"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/logo_uber" />

        <LinearLayout
            android:id="@+id/layout_uber_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_uber_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="前 3 次乘车均可获得 ￥10 优惠"
                android:textColor="#858585" />

            <TextView
                android:id="@+id/label_uber_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="立即获得免费乘车机会"
                android:textColor="#dfaa6a" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_wechat"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/layout_uber"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:onClick="openWeChat"
        android:longClickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_wechat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/logo_wechat" />

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="搜索并关注微信公众号:签到钱就到"
                android:textColor="#858585" />

            <TextView
                android:id="@+id/github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="反馈你所遇到的问题"
                android:textColor="#858585"
                 />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
